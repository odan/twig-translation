{
    "name": "odan/twig-translation",
    "type": "library",
    "description": "A Twig Translation Extension",
    "keywords": [
        "twig",
        "translation",
        "translations",
        "text",
        "i18n",
        "poedit",
        "gettext"
    ],
    "homepage": "https://github.com/odan/twig-translation",
    "license": "MIT",
    "require": {
        "php": "^7.3 || ^8.0",
        "twig/twig": "^3.1",
        "symfony/translation-contracts": "^2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2",
        "overtrue/phplint": "^2",
        "phpstan/phpstan": "0.*",
        "phpunit/phpunit": "^9",
        "squizlabs/php_codesniffer": "^3",
        "mikey179/vfsstream": "^1",
        "symfony/translation": "^4 || ^5",
        "symfony/config": "^4 || ^5"
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml",
        "test-coverage": "phpunit --configuration phpunit.xml --coverage-clover build/logs/clover.xml --coverage-html build/coverage",
        "check-style": "phpcs --standard=phpcs.xml",
        "fix-style": "phpcbf --standard=phpcs.xml",
        "phpstan": "phpstan analyse src tests --level=max -c phpstan.neon --no-progress",
        "lint": "phplint ./ --exclude=vendor --no-interaction --no-cache",
        "install-cs": "php -r \"@mkdir('build'); copy('https://cs.symfony.com/download/php-cs-fixer-v2.phar', 'build/php-cs-fixer-v2.phar');\"",
        "fix-cs": "php build/php-cs-fixer-v2.phar fix --config=.cs.php",
        "check-cs": "php build/php-cs-fixer-v2.phar fix --dry-run --format=txt --verbose --diff --diff-format=udiff --config=.cs.php",
        "check-all": [
            "@lint",
            "@check-style",
            "@phpstan",
            "@test-coverage"
        ]
    },
    "autoload": {
        "psr-4": {
            "Odan\\Twig\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Odan\\Twig\\Test\\": "tests/"
        },
        "files": [
            "tests/translate.php"
        ]
    }
}
